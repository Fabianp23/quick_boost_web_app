<div class="col-md-6 col-md-offset-3">

	<div class="edit-wine-form">

		<h1>Edit Drink</h1>

		<%= simple_form_for @wine, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :wine_img %>
			<%= f.input :name, label: "Drink Name" %>
			<%= f.input :description %>
			<%= f.input :origin %>
			<%= f.button :submit, "Update",  :class => "btn-custom2"  %>
		<% end %>

	</div>

</div>
